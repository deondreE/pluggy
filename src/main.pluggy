import { h, signal, mountApp } from "./runtime";

export function App() {
  const disabled = signal(false);

  const toggle = () => {
    disabled.set(!disabled());
    console.log("disabled:", disabled());
  };

  return (
    <div class="counter">
      <button disabled={disabled}>Click Me</button>
      <button onClick={toggle}>
        Toggle (current {disabled})
      </button>
    </div>
  );
}
