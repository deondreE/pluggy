{
  "name": "pluggy-view",
  "description": "Reactive UI compiler & runtime for Pluggy",
  "version": "0.0.3",
  "type": "module",
  "private": false,
  "main": "./dist/cjs/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/cjs/index.cjs"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "rollup -c",
    "test": "vitest",
    "test:watch": "vitest watch",
    "lint": "oxlint 'src/**/*.{js,ts,tsx,pluggy}'",
    "lint:fix": "oxlint --fix 'src/**/*.{js,ts,tsx,pluggy}'",
    "fmt": "oxfmt format .",
    "fmt:check": "oxfmt check .",
    "preview": "vite preview"
  },
  "files": ["dist"],
  "keywords": ["pluggy", "view", "frontend", "reactive", "compiler"],
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.8",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/bun": "latest",
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "4.0.10",
    "oxfmt": "^0.14.0",
    "oxlint": "^1.29.0",
    "rollup": "^4.22.0",
    "tslib": "^2.8.1",
    "vite": "^7.2.2",
    "vitest": "^4.0.10"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.17"
  }
}